# TARGET
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq60xx=y
CONFIG_TARGET_qualcommax_ipq60xx_DEVICE_jdcloud_re-ss-01=y

# Kernel
CONFIG_LINUX_6_12=y
CONFIG_KERNEL_KALLSYMS=n  # 关闭调试，提升稳定性

# NSS Offload
CONFIG_PACKAGE_kmod-qca-nss-drv=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_kmod-qca-nss-drv-pppoe=y
CONFIG_PACKAGE_kmod-qca-nss-drv-ipv6=y

# LuCI
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# 网络加速和 QoS
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_luci-app-sqm=y
CONFIG_PACKAGE_kmod-sched-cake=y
CONFIG_PACKAGE_luci-app-pbr=y
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_luci-app-turboacc=y

# 广告过滤
CONFIG_PACKAGE_adbyby-plus=y
CONFIG_PACKAGE_adguardhome=y
CONFIG_PACKAGE_luci-app-adguardhome=y

# 工具
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_autocore=y

# 系统设置
CONFIG_DEFAULT_IP="192.168.1.1"

# 文件系统
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_IMAGES_PAD=y
CONFIG_TARGET_ROOTFS_EXT4=y
CONFIG_TARGET_ROOTFS_TAR=y
CONFIG_TARGET_KERNEL_PARTSIZE=64
CONFIG_TARGET_ROOTFS_PARTSIZE=512

# 其他
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_block-mount=y